<Window x:Class="SeperateFileTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeperateFileTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="548" Width="790.5">

    <StackPanel>

        <StackPanel.Resources>
            <HierarchicalDataTemplate x:Key="ChildTemplate" ItemsSource="{Binding Path=ChildDirectories}" >
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontStyle="Italic" Text="{Binding Path=Name}" />
                   <TextBlock Text="{Binding Path=Size}" FontWeight="Bold" Width="100"/>
                </StackPanel>
            </HierarchicalDataTemplate>
            <HierarchicalDataTemplate x:Key="NameTemplate" 
        ItemsSource="{Binding Path=ChildDirectories}" 
        ItemTemplate="{StaticResource ChildTemplate}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Path=Name}" FontWeight="Bold" Width="100"/>
                    <TextBlock Text="{Binding Path=Size}" FontWeight="Bold" Width="100"/>
                </StackPanel>
            </HierarchicalDataTemplate>
        </StackPanel.Resources>

        <TreeView Width="400"  Height="300" ItemsSource="{Binding}" 
    ItemTemplate="{StaticResource NameTemplate}" x:Name="myTreeView" />


    </StackPanel>
</Window>
